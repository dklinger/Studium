<?php

$dir = "C:\\Arbeit\\Studium\\xampp portable\\htdocs";
$dir_content = GetContent($dir);



function GetContent($dir)
{
	$content = scandir($dir);
	for ($i = 0; $i < count($content); $i++)
	{
		if(is_dir($content[$i]))
		{
			print_r($dir ."\\". $content[$i]);
			GetContent($dir ."\\". $content[$i]);
		}
		else 
		{
			print_R($dir ."\\". $content[$i]);
		}
	}
}

?>