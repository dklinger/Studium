<?php

$file = "c:\\temp\\file.txt";
$content = file_get_contents($file);
print($content);
$pattern = "/\s/";

if(preg_match($pattern, $content, $match))
{
	$match = preg_split($pattern, $content);
	$erg = 0;
	print("Count: ". count($match) ."\r\n");
	for($i=0; $i < count($match);$i++)
	{
		print(trim($match[$i]) ."\r\n");
		$zahl = trim($match[$i]);
		$erg += $zahl;
	}
	
	print("Summe: ". $erg ."\r\n");
}
else
{
	print("Nope\r\n");
}
?>